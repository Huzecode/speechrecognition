<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Acr.SpeechRecognition</id>
        <version>1.0.0</version>
        <title>ACR Speech Recognition Plugin for Xamarin and Windows</title>
        <summary>Speech recognition plugin for iOS, Android, and Windows</summary>
        <description>
Supported Platforms
- iOS 10+
- Android API 23+
- Universal Windows Platform (Win10/UWP)
- Portable Class Libraries (Profile 259)
        </description>
        <authors>Allan Ritchie</authors>
        <owners>Allan Ritchie</owners>
        <licenseUrl>https://github.com/aritchie/speechrecognition/LICENSE.md</licenseUrl>
        <projectUrl>https://github.com/aritchie/speechrecognition</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <tags>windows xamarin xam.pcl speech recognition</tags>
        <releaseNotes>
1.0.0
Initial Release
        </releaseNotes>
        <dependencies>
            <dependency id="rx-main" version="[2.2.5, 3)" />
        </dependencies>
    </metadata>
    <files>
