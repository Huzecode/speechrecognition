        <file src="..\src\Acr.SpeechRecognition\bin\Release\Acr.SpeechRecognition.*" target="lib\portable-win+net45+wp8+win8+wpa81" />

        <!-- android -->
        <file src="..\src\Acr.SpeechRecognition.Android\bin\Release\Acr.SpeechRecognition.*" target="lib\MonoAndroid10" />

        <!-- ios -->
