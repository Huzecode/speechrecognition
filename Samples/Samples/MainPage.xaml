<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.MainPage">
    <StackLayout>
        <Button Text="Listen" Command="{Binding Start}" IsEnabled="{Binding IsAnswerVisible}" />
        <Label Text="Hello, please tell me your name" />
        <Label Text="{Binding Answer}" IsVisible="{Binding IsAnswerVisible}" />
    </StackLayout>
</ContentPage>