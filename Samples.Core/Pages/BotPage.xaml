             xmlns:viewModels="clr-namespace:Samples.ViewModels;assembly=Samples.Core"
             x:Class="Samples.Pages.BotPage">
    <ContentPage.BindingContext>
        <viewModels:BotViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Conversation}">
                <ListView.ItemTemplate>

                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>