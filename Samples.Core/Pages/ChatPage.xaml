<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Pages.ChatPage"
             Title="Say Hello">
    <StackLayout>
        <Button Text="Listen" Command="{Binding Start}" IsEnabled="{Binding IsAnswerVisible}" />
        <Label Text="{Binding Text}" />
        <Label Text="LISTENING...." IsVisible="{Binding IsListening}" />
    </StackLayout>
</ContentPage>